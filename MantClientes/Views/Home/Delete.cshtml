@model MantClientes.Models.Cliente

<h2>Borrar Cliente</h2>
@using (Html.BeginForm("delete", "home", FormMethod.Post, new { id = "popupForm" }))
{
    @Html.HiddenFor(a => a.ClienteID)
    <div class="form-group">
        <label>First Name</label>
        <p>@Model.Nombre</p>
    </div>

    <div class="form-group">
        <label>Last Name</label>
        <p>@Model.Telefono</p>
    </div>

    <div class="form-group">
        <label>Email</label>
        <p>@Model.Direccion</p>
    </div>

    <div>
        <input type="submit" value="Delete" />
    </div>
}